// Font
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,700');
$open-sans = "Open Sans", HelveticaNeue, Helvetica, Arial, sans-serif

// Colors
$logo-text = #9BC651
$box1-large= #43463E
$box1-small= #37461D
$box2-large= #091E28
$box2-small= #73933C

// responsive background image
responsive-bg-image(image-width, image-height)
  background-size: 100%
  height: 0
  padding-bottom: percentage(image-height / image-width)
  display: block

// grid
gap = 1%
gridsize = 12
.container
  width: 85%
  margin: 0 auto
.row
  margin-left: (-1 * gap)
  margin-right: (-1 * gap)
  &:after
    content: " "
    display: table
    clear: both
for i in (1..gridsize)
  .column-{i}
    width: (i / gridsize * 100%)
    padding-left: gap
    padding-right: gap
    float: left
.clr
  clear: both

html
  box-sizing: border-box
*, *:before, *:after
  box-sizing: inherit
body
  font-family $open-sans
  font-weight 300
  margin-bottom 10%