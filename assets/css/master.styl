@import '_settings'

normalize-css()
base()


header
  background url("../img/header-bkg-mobile.png") no-repeat
  responsive-bg-image(920px, 743px)
  color: #fff
  nav
    height 12vh
    background-color rgba(255, 255, 255, 0.57)
    h1
      text-align center
      color $logo-text
      margin 0
      line-height 10vh
      padding: 5px
      font-size 26px
  #iphone
    margin 55% 0 0 -32%
    width 100%
  #header-title
    margin 25% 0 0 0
    font-size 5vw
  #header-text
    font-size 2vw
.hide
  display none

.articles
  font-size 2.8vw
  .articles__article1
    margin-top -18%
    .article1__title
      font-size 4.6vw
      font-weight 300
  .articles__article2
    margin-bottom 3vh
.animate
  animation-name: slideInLeft;
  animation-duration: 2s;
  animation-fill-mode: both;
@keyframes slideInLeft
  from
    transform: translate3d(-100%, 0, 0)
    visibility: visible
  to
    transform: translate3d(0, 0, 0)

.boxes
  color #FFF
  font-size 3vw
  > div
    padding 35px
  .boxes__1-large
    background-color $box1-large
  .boxes__1-small
    background-color $box1-small
  .boxes__2-large
    background-color $box2-large
  .boxes__2-small
    background-color $box2-small
  .boxes__title
    font-weight 300
    font-size 6vw
    margin  0
  a
    text-decoration none
    color #FFF
    font-weight 700

#slide--menu
  background-color rgba(85, 85, 85, 0.73)
  width 40%
  height 85.5vh
  position absolute
  top 14.5vh
  right 0
  ul
    list-style none
    font-size 45px
    li
      padding-top 50px
      text-align center
      a
        letter-spacing 3px
      a:hover
        color springgreen
        font-size 48px

@media screen and (max-width: 620px)
  .articles__article1, .articles__article2, .boxes__1-large,.boxes__1-small,.boxes__2-large,.boxes__2-small
    width 100%

@media screen and (min-width: 1025px)
  header
    background url("../img/header-bkg.png") no-repeat
    responsive-bg-image(1799px, 946px)
    #iphone
      margin 28% 0 0 -7%

  .container
    width 70%

@media screen and (min-width: 621px)
  header
    nav
      height 14.5vh
      #search, #menu
        display block
        position absolute
        height 35px
        top 7.25vh
        transform translateY(-50%)
        opacity 0.4
      #search:hover, #menu:hover
        opacity 1
      #search
        right 10%
      #menu
        right 4%
        z-index 1
      h1
        font-size 35px
        line-height 14.5vh
    #header-title
      margin 50% 0 0 0
      font-size 35px
    #header-text
      font-size 14px
  .articles
    font-size 14px
    margin-bottom 5%
    .articles__article1
      margin-top -12%
      .article1__title
        font-size 35px
  .articles__article2
    margin-top 3.8%
  .boxes
    font-size 14px
    > div
      padding-top 50px
      height 250px
    .boxes__title
      font-size 35px
      margin  0
      padding-bottom 10px
    .boxes__1-small, .boxes__1-large
      position relative
      > a
        position absolute
        bottom 15%
    .boxes__2-small, .boxes__2-large
      position relative
      > a
        position absolute
        bottom 20%

  a
    text-decoration none
    color #FFF
    font-weight 700